@page "{threadId:int?}"
@model HawkLab.Courier.Servers.Web.Pages.Threads.EditModel
@{
}

<h2>Editing @Model.Thread.Subject</h2>

<form method="post">
    <input type="hidden" asp-for="Thread.Id" />
    <div class="form-group">
        <label asp-for="Thread.Subject"></label>
        <input asp-for="Thread.Subject" class="form-control" />
        <span class="text-danger" asp-validation-for="Thread.Subject"></span>
    </div>
    <div class="form-group">
        <label asp-for="Thread.Summary"></label>
        <input asp-for="Thread.Summary" class="form-control" />
        <span class="text-danger" asp-validation-for="Thread.Summary"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
